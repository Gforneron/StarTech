<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
        <title>Listado</title>
        <link rel="stylesheet" href="/css/style-listado.css" />
        <script src="https://kit.fontawesome.com/e6313bd8bc.js" crossorigin="anonymous"></script>
</head>

<body>

    <%- include('../partials/header') %>

        <main>
            <section class="articulos" id="articulos">
                <% for (let i=0; i < productos.length; i++) { %>
                    <div class="producto">
                        <img src="/images/<%= productos[i].imagen %>" alt="Imagen de Placa de Video">
                        <div class="descripcion" onclick="location.href= '/productos/<%= productos[i].id%>'">
                            <h4>
                                <%= productos[i].nombre %>
                            </h4>
                            <p id="precios"></span>$<%= productos[i].precio %>
                            </p>
                            <p id="descuentos">
                                <%= productos[i].descuento%>% OFF
                            </p>
                            <p id="envio">Envio Gratis</p>
                        </div>
                        <input type="submit" id="boton_editar" value="editar producto"
                            onclick="location.href= '/productos/<%= productos[i].id%>/edit'">
                    </div>
                    <% } %>
            </section>
            <br> <br>
            <input type="submit" id="boton_agregar" value="Cargar producto"
                onclick="location.href= '/productos/create'">
        </main>

        <%- include('../partials/footer') %>

</body>

</html>